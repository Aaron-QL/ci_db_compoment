{
  "name": "ofashion/ci_db_adapter",
  "description": "a DAO layer compatible with CI QueryBuilder",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "akaQin",
      "email": "long.qin@mfashion.com.cn"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.1.3",
    "illuminate/support": "^5.7",
    "ext-pdo": "*"
  },
  "autoload": {
    "psr-4": {
